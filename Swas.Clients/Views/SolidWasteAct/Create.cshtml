                                                <input type="text" class="form-control" name="CustomerName" id="CustomerName">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-4">
                                            <label for="CustomerContactInfo">@Html.DisplayNameFor(model => model.CustomerContactInfo)</label>
