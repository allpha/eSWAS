                                <div class="col-md-12">
                                    <div class="tabbable-line boxless tabbable-reversed">
                                        <ul class="nav nav-tabs">
                                            <li class="active">
                                                <a href="#tab_0" data-toggle="tab">მიმღები </a>
                                            </li>
                                            <li>
                                                <a href="#tab_1" data-toggle="tab"> შემომტანი </a>
                                            </li>
                                            <li>
                                                <a href="#tab_2" data-toggle="tab"> მყარი მარჩენები </a>
                                            </li>
                                        </ul>

                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab_0">
                                                <div class="portlet light bordered">

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="ReceiverName"> @Html.DisplayNameFor(model => model.ActDate) </label>
                                                        <div class="col-md-9">
                                                            <div class="input-group input-medium date date-picker" data-date-format="dd/mm/yyyy" data-date-start-date="+0d">
                                                                <input type="datetime" class="form-control" name="ActDate" id="ActDate" value="@Model.ActDate" data-date-format="dd/mm/yyyy" readonly>
                                                                <span class="input-group-btn">
                                                                    <button class="btn default" type="button">
                                                                        <i class="fa fa-calendar"></i>
                                                                    </button>
                                                                </span>
                                                            </div>

                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">აირჩიეთ თარიღი.</span>
                                                        </div>


                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label" for="LandfillId">@Html.DisplayNameFor(model => model.LandfillId)</label>
                                                        <div class="col-md-9">
                                                            @Html.DropDownList("LandfillId", (IEnumerable<SelectListItem>)ViewBag.LandfillItemSource, new { @class = "form-control select2" })
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">აირჩიეთ ნაგავსაყრელი.</span>
                                                        </div>
                                                    </div>


                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="ReceiverName"> @Html.DisplayNameFor(model => model.ReceiverName) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="ReceiverName" id="ReceiverName" value="@Model.ReceiverName">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ მიმღების სახელი.</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="ReceiverLastName"> @Html.DisplayNameFor(model => model.ReceiverLastName) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="ReceiverLastName" id="ReceiverLastName" value="@Model.ReceiverLastName">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ მიმღების გვარი.</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="PositionName"> @Html.DisplayNameFor(model => model.PositionName) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="PositionName" id="PositionName" value="@Model.PositionName">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ მიმღების თანამდებობა.</span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="PositionName"> @Html.DisplayNameFor(model => model.Remark) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="Remark" id="Remark" value="@Model.Remark">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ შენიშვნა.</span>
                                                        </div>
                                                    </div>


                                                </div>

                                            </div>
                                            <div class="tab-pane" id="tab_1">
                                                <div class="portlet light bordered">
                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label" for="Type">@Html.DisplayNameFor(model => model.Type)</label>
                                                        <div class="col-md-9">
                                                            @Html.DropDownList("Type", (IEnumerable<SelectListItem>)ViewBag.LandTypeItemSource, new { @class = "form-control" })
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">აირჩიეთ შემომტანის ტიპი.</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="CustomerCode"> @Html.DisplayNameFor(model => model.CustomerCode) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="CustomerCode" id="CustomerCode" value="@Model.CustomerCode">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ შემომტანის საინდეტიფიკაციო კოდი.</span>
                                                        </div>
                                                    </div>


                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="CustomerName"> @Html.DisplayNameFor(model => model.CustomerName) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="CustomerName" id="CustomerName" value="@Model.CustomerName">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ შემომტანის დასახელება.</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="CustomerContactInfo"> @Html.DisplayNameFor(model => model.CustomerContactInfo) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="CustomerContactInfo" id="CustomerContactInfo" value="@Model.CustomerContactInfo">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ საკონტაქტო ინფორმაცია.</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="RepresentativeName"> @Html.DisplayNameFor(model => model.RepresentativeName) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="RepresentativeName" id="RepresentativeName" value="@Model.RepresentativeName">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ წარმომადგენელი.</span>
                                                        </div>
                                                    </div>


                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="TransporterCarNumber"> @Html.DisplayNameFor(model => model.TransporterCarNumber) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="TransporterCarNumber" id="TransporterCarNumber" value="@Model.TransporterCarNumber">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ ავტომობილის მარკა.</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="TransporterCarModel"> @Html.DisplayNameFor(model => model.TransporterCarModel) </label>
                                                        <div class="col-md-9">
                                                            <input type="text" class="form-control" name="TransporterCarModel" id="TransporterCarModel" value="@Model.TransporterCarModel">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ ავტომობილის მოდელი.</span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group form-md-line-input">
                                                        <label class="col-md-3 control-label input-sm" for="TransporterDriverInfo"> @Html.DisplayNameFor(model => model.TransporterDriverInfo) </label>
                                                        <div class="col-md-9 ">
                                                            <input type="text" class="form-control input-sm" name="TransporterDriverInfo" id="TransporterDriverInfo" value="@Model.TransporterDriverInfo">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="help-block">შეიყვანეთ მძღოლი.</span>
                                                        </div>
                                                    </div>
                                                </div>


                                            </div>

                                            <div class="tab-pane" id="tab_2">
                                                <div class="portlet light bordered">

                                                    <div>
                                                        <div class="btn-group pull-right" style="margin-bottom: 10px;">
                                                            <a id="addWaste" class="btn red btn-outline" data-target="#detailEditorDialog" data-toggle="modal">
                                                                <i class="fa fa-plus"></i>
                                                                ნარჩენის დამატება
                                                            </a>
                                                        </div>
                                                        <div class="table-scrollable">

                                                            <table id="SolidWastActDetailTable" class="table table-bordered table-hover" width="100%">
                                                                <thead>
                                                                    <tr>
                                                                        <th style="line-height: 60px;  text-align: center;">ნარჩენი</th>
                                                                        <th style="line-height: 60px;  text-align: center; width: 100px;">რ-ბ[ტონა]</th>
                                                                        <th style="text-align: center; width: 100px;">ერთეულის&#13;&#10;ფასი<br /> [დღგ-ს&#13;&#10; <br />ჩათვლისთ]</th>
                                                                        <th style="line-height: 20px;text-align: center; width: 100px;">ჯამი <br />დღგ-ს ჩათვლით</th>
                                                                        <th style="text-align: center; width: 80px;"></th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody></tbody>
                                                            </table>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>

                            <div id="detailEditorDialog" class="modal fade" tabindex="-1" data-focus-on="input:first">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                    <h5 class="modal-title font-blue-chambray" style="font-family: mtavrulibold; margin-top:10px;">ნარჩენის დამატება/რედაქტირება</h5>
                                </div>
                                <div class="modal-body">

                                    <div id="wasteEditorErrorText" class="alert alert-danger display-hide">

                                    </div>


                                    <div class="form-group form-md-line-input">
                                        <label class="col-md-3 control-label" style="text-align:right;" for="WasteTypeId">ნარჩენი</label>
                                        <div class="col-md-9">
                                            @Html.DropDownList("WasteTypeId", (IEnumerable<SelectListItem>)ViewBag.WasteTypeItemSource, new { @class = "form-control select2" })
                                            <div class="form-control-focus"> </div>
                                            <span class="help-block">აირჩიეთ ნარჩენი.</span>
                                        </div>
                                    </div>

                                    <div class="form-group form-md-line-input">
                                        <label class="col-md-3 control-label" for="form_control_1" style="text-align:right;">რაოდენობა</label>
                                        <div class="col-md-9">
                                            <div class="md-radio-list">
                                                <div class="md-radio">
                                                    <input type="radio" id="radioQuantityM3" name="radioQuantity" class="md-radiobtn" checked value="-1">
                                                    <label for="radioQuantityM3">
                                                        <span></span>
                                                        <span class="check"></span>
                                                        <span class="box"></span>
                                                        <div class="col-md-4 input-group" style="margin-top: -10px;">
                                                            <input type="text" class="form-control" id="M3Quantity" name="M3Quantity" />
                                                            <div class="form-control-focus"> </div>
                                                            <span class="input-group-addon">მ<sup>3</sup></span>
                                                            <span style="margin-top: 0px; margin-left:10px;" class="help-block">შეიყვანეთ რაოდენობა მ<sup>3</sup>-ში.</span>
                                                        </div>
                                                    </label>
                                                </div>

                                                <div class="md-radio">
                                                    <input type="radio" id="radioQuantityTon" name="radioQuantity" class="md-radiobtn" value="1">
                                                    <label for="radioQuantityTon">
                                                        <span></span>
                                                        <span class="check"></span>
                                                        <span class="box"></span>
                                                        <div class="col-md-4 input-group" style="margin-top: -10px;">
                                                            <input type="text" class="form-control" id="TonQuantity" name="TonQuantity">
                                                            <div class="form-control-focus"> </div>
                                                            <span class="input-group-addon">ტ.</span>
                                                            <span style="margin-top: 0px; margin-left:10px;" class="help-block">შეიყვანეთ რაოდენობა ტონაში.</span>
                                                        </div>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn green" id="btWasteSave">შენახვა</button>
                                    <button type="button" class="btn grey-salsa btn-outline" data-dismiss="modal" id="btWasteClose">გაუქმება</button>
                                </div>
                            </div>
                        </div>

                    </form>
                    <!-- END FORM-->
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" id="btSave">შენახვა</button>
        <button type="button" class="btn grey-salsa btn-outline" data-dismiss="modal">გაუქმება</button>
    </div>

</div>

<script>
    var recieverItemSource = @Html.Raw(Json.Encode(Model.RecieverItemSource));
    var customerItemSource = @Html.Raw(Json.Encode(Model.CustomerItemSource));
    var transporterItemSource = @Html.Raw(Json.Encode(Model.TransporterItemSource));
    var modelSolidWasteTypeItemSource = @Html.Raw(Json.Encode(Model.SolidWasteActDetails));
</script>


<script src="~/assets/pages/scripts/SolidWasteAct/Edit.js"></script>

