
@{
    Layout = null;
}
<div id="editorDialog">
    <div class="modal-header" style="vertical-align:middle">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h5 class="modal-title font-dark-grey" style="font-family: mtavrulibold; margin-top:10px;">პაროლის ცვლილება</h5>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form action="#" class="form-horizontal" id="changePasswordForm" name="changePasswordForm">
                        <div class="form-body">
                            <div class="alert alert-danger display-hide">

                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="UserName"> ძველი პაროლი </label>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" placeholder="" name="OldPassword" id="OldPassword">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ პაროლი რომლის გამოცვლაც გსურთ</span>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="UserName"> ახალი პაროლი </label>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" placeholder="" name="NewPassword" id="NewPassword">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ ახალი პაროლი</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="UserName"> გაიმეორეთ ახალი პაროლი </label>
                                <div class="col-md-9">
                                    <input type="password" class="form-control" placeholder="" name="ReNewPassword" id="ReNewPassword">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ გაიმოეორეთ ახალი</span>
                                </div>
                            </div>


                        </div>
                    </form>
                    <!-- END FORM-->
                </div>

            </div>

        </div>
    </div>
    <div class="modal-footer">
        @*<div class="btn-group pull-right">*@
            <button id="dialogClose" type="button" class="btn grey-salsa btn-outline" data-dismiss="modal">დახურვა</button>
            <button type="button" class="btn green" id="btSave">პაროლის ცვლილება</button>
        @*</div>*@
    </div>
</div>

<script src="~/assets/script/BusyIndicator/BusyIndicator.js"></script>
<script src="~/assets/script/Account/PasswordChange.js"></script>