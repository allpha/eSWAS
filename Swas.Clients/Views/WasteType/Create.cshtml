@model Swas.Clients.Models.WasteTypeViewModel

@{
    Layout = null;
}

<div id="editorDialog">
    <div class="modal-header" style="vertical-align:middle">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h5 class="modal-title font-black" style="font-family: mtavrulibold; margin-top:10px;">რეგიონის შექმნა</h5>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form action="#" class="form-horizontal" id="registrationForm">
                        <div class="form-body">
                            <div class="alert alert-danger display-hide">

                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label input-sm" for="Name"> @Html.DisplayNameFor(model => model.Name) </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control input-sm" placeholder="" name="Name" id="Name">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ ნარჩენის ტიპის დასახელება.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <div class="col-md-3">

                                </div>
                                <div class="col-md-9">
                                    <a href="javascript:;" id="LessQuantityEditor" data-type="LessQuantityEditor" data-pk="1" > 2</a>
                                </div>
                            </div>
                    </form>
                    <!-- END FORM-->
                </div>

            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" id="btSave">შენახვა</button>
        <button type="button" class="btn grey-salsa btn-outline" data-dismiss="modal">გაუქმება</button>
    </div>

</div>

<script src="~/assets/pages/scripts/Landfill/Create.js"></script>
<script>

    jQuery(document).ready(function () {

        $('#LessQuantityEditor').editable({
            emptytext: 'გთხოვთ შეავსოთ მონაცემები',
            validate: function(value) {
                if (value.LessQuantity == '') return 'არ შეიძლება იყოს ცარიელი!';
            },
            value: {
                LessQuantity : @Model.LessQuantity,
                MunicipalityLessQuantityPrice : @Model.MunicipalityLessQuantityPrice,
                LegalPersonLessQuantityPrice : @Model.LegalPersonLessQuantityPrice,
                PhysicalPersonLessQuantityPrice : @Model.PhysicalPersonLessQuantityPrice,
            },
            display: function (value) {
                if (!value) {
                    $(this).empty();
                    return;
                }
                var html = '<b>' + $('<div>').text(value.LessQuantity).html() + ' ტონაზე ნაკლები ნარჩენის ფასი, ' +
                            'მუნიციპალიტეტისთვის ' + $('<div>').text(value.MunicipalityLessQuantityPrice).html() + '₾,' +
                            'იურიდიული პირისთვის ' + $('<div>').text(value.LegalPersonLessQuantityPrice).html() + '₾,' +
                            'ფიზიკური პირისთვის ' + $('<div>').text(value.PhysicalPersonLessQuantityPrice).html() + '₾ </b> ';

                $(this).html(html);
            }
        });



        $('#LessQuantity').editable({
            validate: function (value) {
                if ($.trim(value) == '') return 'ის არის აუცილებელი ველი';
            }
        });

        $('#EndQuantity').editable({
            validate: function (value) {
                if ($.trim(value) == '') return 'ის არის აუცილებელი ველი';
            }
        });

        $('#FromQuantity').editable({
            validate: function (value) {
                if ($.trim(value) == '') return 'ის არის აუცილებელი ველი';
            }
        });

        $('#MoreQuantity').editable({
            validate: function (value) {
                if ($.trim(value) == '') return 'ის არის აუცილებელი ველი';
            }
        });
    });
</script>
