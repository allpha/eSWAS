
@{
    Layout = null;
}

<div id="editorDialog">
    <div class="modal-header" style="vertical-align:middle">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h5 class="modal-title font-dark-grey" style="font-family: mtavrulibold; margin-top:10px;">მომხმარებლის შექმნა</h5>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet-body">
                    <!-- BEGIN FORM-->
                    <form action="#" class="form-horizontal" id="registrationForm">
                        <div class="form-body">
                            <div class="alert alert-danger display-hide">

                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="UserName"> მომხმარებლის სახელი </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" name="UserName" id="UserName">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ მომხმარებლის სახელი.</span>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="Email"> ელ.ფოსტა </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" name="Email" id="Email">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ ელექტრონული ფოსტა.</span>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="UseEmailAsUserName">  </label>
                                <div class="col-md-9">
                                    <div class="md-checkbox">
                                        <input type="checkbox" id="UseEmailAsUserName" name="UseEmailAsUserName" class="md-check">
                                        <label for="UseEmailAsUserName">
                                            <span></span>
                                            <span class="check"></span>
                                            <span class="box"></span> ელ.ფოსტის გამოყენება მომხმარებლის სახელად
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="roleCombo"> მომხმარებელთა ჯგუფი </label>
                                <div class="col-md-9">
                                    <select id="roleCombo" name="roleCombo" class="form-control select2"></select>
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">გთხოვთ აირჩიოთ მომხმარებელთა ჯგუფი.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="FirstName"> სახელი </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" name="FirstName" id="FirstName">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">გთხოვთ შეიყვანოთ სახელი.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="FirstName"> გვარი </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" name="LastName" id="LastName">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">გთხოვთ შეიყვანოთ გვარი.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="PrivateNumber"> პირადობის # </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" name="PrivateNumber" id="PrivateNumber">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">გთხოვთ შეიყვანოთ პირადობის ნომერი.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="BirthDate"> დაბადების თარიღი </label>
                                <div class="col-md-9">
                                    <div class="input-group date date-picker" id="BirthDatePicker" data-date-format="mm/dd/yyyy">
                                        <input type="text" class="form-control" name="BirthDate" id="BirthDate" size="6" value="">
                                        <span class="input-group-btn">
                                            <button class="btn default" type="button" style="margin-left:0.3px;">
                                                <i class="fa fa-calendar"></i>
                                            </button>
                                        </span>
                                    </div>
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">გთხოვთ აირჩიოთ დაბადების თარიღი.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="JobPosition"> სამუშაო პოზიცია </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" name="JobPosition" id="JobPosition">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">გთხოვთ შეიყვანოთ სამუშაო პოზიცია.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="regionCombo"> გეოგრაფიული არეალი </label>
                                <div class="col-md-9">
                                    <select id="regionCombo" name="regionCombo" class="form-control select2" multiple></select>
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">გთხოვთ აირჩიოთ გეოგრაფიული არეალი.</span>
                                </div>
                            </div>



                        </div>

                    </form>
                    <!-- END FORM-->
                </div>

            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" id="btSave">შენახვა</button>
        <button type="button" class="btn grey-salsa btn-outline" data-dismiss="modal">გაუქმება</button>
    </div>

</div>

<script src="../assets/global/plugins/typeahead/handlebars.min.js" type="text/javascript"></script>
<script src="../assets/global/plugins/typeahead/typeahead.bundle.min.js" type="text/javascript"></script>
<script src="~/assets/pages/scripts/BusyIndicator/BusyIndicator.js"></script>
<script src="~/assets/script/User/Create.js"></script>
