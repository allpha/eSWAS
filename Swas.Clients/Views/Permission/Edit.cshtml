@model Swas.Clients.Models.PermissionViewModel

@{
    Layout = null;
}

<div id="editorDialog">
    <div class="modal-header" style="vertical-align:middle">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h5 class="modal-title font-dark-grey" style="font-family: mtavrulibold; margin-top:10px;">უფლების რედაქტირება</h5>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet-body">
                    <!-- BEGIN FORM-->

                    <form action="#" class="form-horizontal" id="registrationForm">
                        <div class="form-body">
                            <div class="alert alert-danger display-hide">

                            </div>

                            <input type="hidden" value="@Model.Id" name="Id" id="Id" />
                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="form_control_1"> @Html.DisplayNameFor(model => model.Description) </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" value="@Model.Description" name="description" id="description">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ უფლების აღწერილობა.</span>
                                </div>
                            </div>

                            <div class="form-group form-md-line-input">
                                <label class="col-md-3 control-label" for="form_control_1"> @Html.DisplayNameFor(model => model.Name) </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" placeholder="" value="@Model.Name" name="name" id="name">
                                    <div class="form-control-focus"> </div>
                                    <span class="help-block">შეიყვანეთ უფლების დასახელება.</span>
                                </div>
                            </div>

                        </div>

                    </form>
                    <!-- END FORM-->
                </div>

            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn green" id="btSave">შენახვა</button>
        <button type="button" class="btn grey-salsa btn-outline" data-dismiss="modal">გაუქმება</button>
    </div>

</div>
<script src="~/assets/pages/scripts/Permission/Edit.js"></script>