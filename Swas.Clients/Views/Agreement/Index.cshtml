@using Swas.Clients.Common

@{
    ViewBag.Title = "ხელშეკრულება";
}

<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered" id="viewBody">
            <div class="portlet-title">
                <div class="caption caption-md">
                    <span class="caption-subject font-blue-madison bold uppercase" style="font-family: mtavrulibold">იურიდიული პირების ხელშეკრულება</span>
                </div>
                <div class="btn-group pull-right">
                    <div class="btn-group">
                        @if (Globals.SessionContext.HasPermission("Agreement.Create"))
                        {
                            <button class="btn blue-madison btn-outline" onclick="javascript:create();">
                                <i class="fa fa-plus"></i>
                                ახალი ხელშეკრულება
                            </button>
                        }
                    </div>
                </div>
            </div>

            <a id="ajax-model-dialog-editor" data-url="/home/NotFound" data-toggle="modal"> </a>
            <div id="ajax-modal" class="modal container fade" tabindex="-1" data-width="600" data-backdrop="static" data-keyboard="true"> </div>

            @if (Globals.SessionContext.HasPermission("Agreement.Delete"))
            {
                <input type="hidden" id="hasDelete" value="true" />
            }
            else
            {
                <input type="hidden" id="hasDelete" value="false" />
            }


            @if (Globals.SessionContext.HasPermission("Agreement.Edit"))
            {
                <input type="hidden" id="hasEdit" value="true" />
            }
            else
            {
                <input type="hidden" id="hasEdit" value="false" />
            }

            <div class="table-scrollable table-scrollable-borderless">
                <table class="table table-hover table-light" id="itemSource">
                    <thead>
                        <tr class="uppercase">
                            <th style="font-family: mtavrulibold;"> ხელშეკრულების ნომერი</th>
                            <th style="font-family: mtavrulibold"> საინდნტიფიკაციო კოდი</th>
                            <th style="font-family: mtavrulibold"> დასახელება</th>
                            <th style="font-family: mtavrulibold"> დაწყების თარიღი</th>
                            <th style="font-family: mtavrulibold"> დასრულების თარიღი</th>
                            <th width="100px"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>

@section PageScripts{
    <script src="../assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="../assets/global/plugins/jquery-bootpag/jquery.bootpag.min.js" type="text/javascript"></script>
    <script src="~/assets/script/Agreement/Index.js"></script>
}



